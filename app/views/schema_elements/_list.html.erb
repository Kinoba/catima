<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Instance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schema_elements.each do |schema_element| %>
      <tr>
        <td><%= schema_element.name %></td>
        <td><%= schema_element.description %></td>
        <td><%= schema_element.instance %></td>
        <td><%= link_to 'Show', schema_element %></td>
        <td><%= link_to 'Edit', edit_schema_element_path(schema_element) %></td>
        <td><%= link_to 'Destroy', schema_element, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% provide(:extra_nav) do %>
  <%= render("simple_search/form",
      :controller => "simple_search",
      :action => "create",
      :display_advanced_search => true) %>
<% end %>

<% provide(:title) do %>
  <%= t(".title",
        :query => @simple_search_results.query,
        :count => @simple_search_results.total_count,
        :count_delimited => number_with_delimiter(@simple_search_results.total_count)) %>

  <% if search_exists_for_user?(@saved_search) %>
    <%= link_to(
            fa_icon("save", :text => t(".searches_remove")),
            search_path(I18n.locale, @saved_search.search),
            :class => "btn btn-default btn-xs",
            method: :delete
        ) %>
  <% else %>
    <%= link_to(
            fa_icon("save", :text => t(".searches_add")),
            searches_path(I18n.locale, related_search_uuid: @saved_search.uuid),
            :class => "btn btn-default btn-xs",
            method: :post
        ) %>
  <% end %>
<% end %>

<%= render :partial => "simple_search/list", :locals => { :search_results => @simple_search_results, :search_result => @saved_search } %>

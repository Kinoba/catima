<%= bootstrap_form_tag(
      :url => { :controller => controller, :action => action },
      :method => "GET",
      :layout => :inline,
      :html => { :style => "text-align: center" }) do |f| %>

  <%= f.search_field(
        :q,
        :value => params[:q],
        :label => "Search",
        :hide_label => true,
        :autofocus => true,
        :style => "width: 25em"
        ) %>

  <%= f.submit(t(".submit")) %>

  <% if display_advanced_search %>
    <%= link_to(
          t(".advanced"),
          new_advanced_search_path,
          :class => "btn btn-link") %>
  <% end %>
<% end %>

<% provide(:title, "Create a viim admin") %>

<%= bootstrap_form_for([:admin, @user]) do |f| %>

  <%= f.alert_message("Please review the problems below:") %>

  <%= f.text_field(:email, :autofocus => true, :autocomplete => "off") %>
  <%= locale_language_select(
        f,
        :primary_language,
        :help => "Admin screens are only available in English, "\
                 "but the userâ€™s preferred language will be honored for login "\
                 "pages and for the catalogs themselves.") %>
  <hr>

  <%= f.check_box(:system_admin) %>
  <span class="help-block">
    If <i>System admin</i> is checked, this user will be able to administer all viim catalogs, including any new catalogs that are created in the future. This user will also be able to create other admins and modify the global viim configuration.
  </span>

  <hr>

  <% if @user.catalog_choices.any? %>
    <%= f.collection_check_boxes(
          :catalog_id,
          @user.catalog_choices,
          :id,
          :name,
          :label => "Can administer these catalogs",
          :help => "Catalog admins can invite editors and make changes to the "\
                   "catalog definition and its contents.") %>
    <hr>
  <% end %>

  <%= f.primary("Send invitation") %>
  <%= link_to "Cancel", admin_dashboard_path, :class => "btn btn-link" %>

<% end %>

<% provide(:title, t(".title")) %>

<%= bootstrap_form_for(
      resource,
      :as => resource_name,
      :url => password_path(resource_name),
      :html => { :method => :post }) do |f| %>

  <%= devise_error_messages! %>

  <%= f.email_field :email, :autofocus => true %>

  <div style="margin-top: 20px">
    <%= f.primary(t(".submit")) %>
  </div>
<% end %>

<hr>

<%= render "devise/shared/links" %>

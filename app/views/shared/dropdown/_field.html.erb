<% if policy(model).edit? %>
  <li>
    <%= link_to(
            fa_icon("pencil", :text => t("edit")),
            {:action => :edit, :slug => model}
        ) %>
  </li>
<% end %>
<% if policy(model).destroy? %>
  <li>
    <%= link_to(
            fa_icon("trash-o", :text => t("delete")),
            {:action => :destroy, :slug => model},
            :method => :delete,
            :data => {
                :confirm => t("delete_confirm", model: model.name)
            }
        ) %>
  </li>
<% end %>

<% if defined?(catalog) %>
  <% if policy(model).edit_in_catalog?(catalog) %>
    <li>
      <%= link_to(
              fa_icon("pencil", :text => t("edit")),
              edit_catalog_admin_user_path(catalog, I18n.locale, model)
          )%>
    </li>
  <% end %>
<% else %>
  <li>
    <%= link_to edit_admin_user_path(model) do %>
      <%= fa_icon("pencil", :text => "Edit") %>
    <% end %>
  </li>
  <li>
    <%= link_to [:admin, model], :method => :delete, :data => { :confirm => "Are you sure you want to delete this user?" } do %>
      <%= fa_icon("trash-o", :text => "Delete") %>
    <% end %>
  </li>
<% end %>

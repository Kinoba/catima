<% if policy(Configuration).update? ||
      (catalog_scoped? && policy(catalog).show?)  %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      Admin
      <b class="caret"></b>
    </a>

    <ul class="dropdown-menu">
      <%# Catalog management %>
      <% if catalog_scoped? %>
        <li class="dropdown-header">
          <%= fa_icon(:book, :text => "Catalog data") %>
        </li>
        <li><a href="javascript:;">Authors</a></li>
        <li><a href="javascript:;">Books</a></li>

        <% if policy(catalog).show? %>
          <li role="separator" class="divider"></li>
          <li>
            <%= link_to(catalog_admin_dashboard_path(catalog)) do %>
              <%= fa_icon(:wrench, :text => "Catalog setup") %>
            <% end %>
          </li>
        <% end %>
      <% end %>

      <% if policy(Configuration).update? %>
        <% if catalog_scoped? %>
          <li role="separator" class="divider"></li>
        <% end %>
        <li>
          <%= link_to(admin_dashboard_path) do %>
            <%= fa_icon(:cogs, :text => "viim admin") %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>

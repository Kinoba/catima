<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <%= current_locale_flag_and_language %>
    <b class="caret"></b>
  </a>

  <ul class="dropdown-menu">
    <% locale_language_choices.each do |locale, language, current| %>
      <%= content_tag(:li, :class => ("disabled" if current)) do %>
        <%= link_to({ :locale => locale }) do %>
          <%= fa_icon(:check) if current %>
          <%= locale_flag_and_language(locale) %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</li>

<h1>Edit <%= @element.name %> «<%= @item['title'] %>»</h1>
<%= link_to '< Back', catalog_element_admin_path(catalog:@catalog.url, element:@element.name)%>
<hr>

<div class="container">
  <form class="form-horizontal">
    
    <div class="form-group">
      <label for="ID" class="col-sm-3 control-label">ID</label>
      <div class="col-sm-2">
        <input type="text" class="form-control" id="ID" value="<%= @item['id'] %>" disabled>
      </div>
    </div>
    
    <% @element.schema_fields.each do |f| %>
    
      <div class="form-group">
        <label for="<%= f.name %>" class="col-sm-3 control-label"><%= f.name.capitalize %></label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="<%= f.name %>" value="<%= @item[f.name] %>">
        </div>
      </div>
    
    <% end %>

    <div class="col-sm-offset-3 col-sm-8">
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </form>
</div>





<% provide(:title, "New menu item") %>

<div class="panel-body">
  <%= bootstrap_form_for([:catalog_admin, @menu_item]) do |f| %>

    <%= render("common_form_fields", :f => f) %>

    <%= f.primary("Create menu item") %>
    <%= submit_and_add_another(f) %>
    <%= link_to(
          "Cancel",
          catalog_admin_menu_items_path,
          :class => "btn btn-link") %>

  <% end %>
</div>

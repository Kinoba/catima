<%= f.number_field(:minimum, :label => t('.min_value')) %>
<%= f.number_field(:maximum, :label => t('.max_value')) %>
<%= field_default_value_input(f) %>
<%= f.form_group(:auto_increment) do %>
  <%= f.check_box(
        :auto_increment,
        :label => t('.auto_increment')
      ) %>
<% end %>

<script>
$(function(){
  if ($('#field_auto_increment')[0].checked){
    $('#field_default_value').attr('disabled', 'disabled');
  }
  $('#field_auto_increment').on('change', function(e){
    if ($('#field_auto_increment')[0].checked){
      $('#field_default_value').attr('disabled', 'disabled');
    } else {
      $('#field_default_value').attr('disabled', null);
    }
  })
})
</script>
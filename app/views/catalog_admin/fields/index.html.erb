<% provide(:title) do %>
  <b><%= @field_set.name %></b>
  <%= field_set_metadata(@field_set) %>
<% end %>

<% provide(:actions) do %>
  <%= link_to(
        "Edit #{@field_set.model_name.human.downcase}",
        edit_field_set_path(@field_set),
        :class => "btn btn-xs btn-text") %>

  <span class="dropdown">
    <button class="btn btn-xs btn-default dropdown-toggle" type="button" id="add-field-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      <%= fa_icon(:"plus-square", :text => "Addâ€¦") %>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="add-field-dropdown">
      <% Field.type_choices.each do |key, label| %>
        <li>
          <%= link_to("#{label} field", { :action => :new, :type => key }) %>
        </li>
      <% end %>
    </ul>
  </span>
<% end %>

<table class="table" id="fields">
  <%= render("table") %>
</table>

<% provide(:title) do %>
  <b><%= @item_type.name %></b>
  (plural: “<%= @item_type.name_plural %>”, slug: “<%= @item_type.slug %>”)
<% end %>

<% provide(:actions) do %>
  <%= link_to(
        "Edit name and slug",
        edit_catalog_admin_item_type_path(catalog, @item_type)) %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th style="width: 1em">Position</th>
      <th>Name</th>
      <th>Type</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.position %></td>
        <td><%= field.name %></td>
        <td><%= field.type_name %></td>
        <td style="text-align: right">
          TODO
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

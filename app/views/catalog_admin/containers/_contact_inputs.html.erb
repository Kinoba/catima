<%# Later when the admin will be able to add custom fields to the contact form we should store
the translation of the field's label here and remove the translations from the .yml files %>
<%= f.hidden_field(:name,
                   :value => '{
                      "row_order": 1,
                      "enabled": true,
                      "required": false,
                      "input_type": "text_field",
                      "label": "containers.contact.name"
                    }'
                  ) %>

<%= f.hidden_field(:email,
                   :value => '{
                      "row_order": 2,
                      "enabled": true,
                      "required": true,
                      "input_type": "email_field",
                      "label": "containers.contact.email"
                    }'
                  ) %>

<%= f.hidden_field(:subject,
                   :value => '{
                      "row_order": 3,
                      "enabled": true,
                      "required": false,
                      "input_type": "text_field",
                      "label": "containers.contact.subject"
                    }'
                  ) %>

<%= f.hidden_field(:body,
                   :value => '{
                      "row_order": 4,
                      "enabled": true,
                      "required": true,
                      "input_type": "text_area",
                      "label": "containers.contact.body"
                    }'
                  ) %>

<%= f.email_field(
      :receiving_email,
      :label => t('.receiving_email.label'),
      :help => t('.receiving_email.help'),
      :required => true
  ) %>

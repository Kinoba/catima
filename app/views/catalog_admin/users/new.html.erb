<% provide(:title, "New user") %>

<%= bootstrap_form_for(
      @user,
      :url => catalog_admin_users_path(catalog)
      ) do |f| %>

  <%= f.email_field(:email, :autofocus => true, :autocomplete => "off") %>
  <%= render("common_form_fields", :f => f) %>
  <%= f.primary("Send invitation") %>
  <%= link_to "Cancel", catalog_admin_users_path, :class => "btn btn-link" %>

<% end %>

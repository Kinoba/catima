<%= f.text_field(:name, :autofocus => true) %>

<%= f.form_group(
      :advertize,
      :help => "If checked, this catalog can be found in public "\
               "catalog lists."
      ) do %>
  <%= f.check_box(:advertize) %>
<% end %>

<hr>

<%= f.select(
  :custom_root_page_id,
  options_from_collection_for_select(
    @catalog.pages, "id", "title", @catalog.custom_root_page_id
  ),
  { include_blank: true }
) %>

<hr>

<h4>Display options</h4>
<%= f.form_group(
    :visible,
    :help => "If checked, this catalog will be available for everyone. "\
             "Otherwise only catalog staff will be able to see the content.") do %>
  <%= f.check_box(:visible, :label => "Visible") %>
<% end %>
<% provide(:title, "Edit item type") %>

<%= bootstrap_form_for(@item_type,
                       :url => catalog_admin_item_type_path) do |f| %>

  <%= render("common_form_fields", :f => f) %>

  <hr>

  <%= link_to(
        fa_icon(:trash, :text => "Delete this item type"),
        { :action => "destroy" },
        :method => "delete",
        :class => "pull-right btn btn-link",
        :data => {
          :confirm => "Are you sure you want to delete the #{@item_type.name} "\
                      "item type? This cannot be undone."
        }) %>

  <%= f.primary("Save item type") %>
  <%= link_to(
        "Cancel",
        catalog_admin_item_type_fields_path(catalog, @item_type),
        :class => "btn btn-link") %>

<% end %>

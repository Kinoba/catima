<% provide(:title) do %>
  <b><%= @item_type.name_plural %></b>
<% end %>

<% if @item_type.fields.count == 0 %>
  <div class="alert alert-warning" style="margin-bottom: 0;">
  <%= t('.no_fields_warning') %><br>
  <%= t('.add_fields') %>
  </div>
<% end %>

<% if @item_type.fields.count > 0 %>

  <% provide(:actions) do %>
    <%= render("sort_menu") if sort_field_choices.any? %>
    <div class="btn-group">
      <%= link_to(
            fa_icon(:"plus-square", :text => t('.new_item_type', item_type: @item_type.name)),
            new_catalog_admin_item_path(catalog, @item_type),
            :class => "btn btn-xs btn-default") %>
      <button type="button"
              class="btn btn-xs btn-default dropdown-toggle"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false">
        <span class="caret"></span>
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to(t('.import_csv'), new_catalog_admin_csv_import_path) %>
        </li>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <% @fields.each do |field| %>
          <th><%= field.label %></th>
        <% end %>
        <% if catalog.requires_review? %>
          <th><%= t('.status') %></th>
        <% end %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <% @fields.each do |field| %>
            <td><%= field_value(item, field, :style => :compact) %></td>
          <% end %>
          <% if catalog.requires_review? %>
            <td><%= review_status_label(item) %></td>
          <% end %>
          <td style="text-align: right">
            <% if policy(item).edit? %>
              <%= link_to(
                    fa_icon("pencil", :text => t("edit")),
                    edit_catalog_admin_item_path(catalog, @item_type, item),
                    :class => "btn btn-default btn-xs") %>
            <% end %>
            <% if policy(item).destroy? %>
              <%= link_to(
                    fa_icon("trash-o", :text => t("delete")),
                    catalog_admin_item_path(catalog, @item_type, item),
                    :class => "btn btn-xs btn-text",
                    :method => :delete,
                    :data => {
                      :confirm => t('.delete_confirm', item: item_display_name(item))
                    }) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% content_for(:pager, paginate(@items)) %>

<% end %>
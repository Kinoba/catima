<% provide(:title, "New #{@item.item_type.name_primary}") %>

<%= bootstrap_form_for([:catalog_admin, @item]) do |f| %>

  <%= render("common_form_fields", :f => f) %>

  <hr>

  <%= f.primary("Create #{@item.item_type.name_primary}") %>
  <%= submit_and_add_another(f) %>

  <%= link_to(
        "Cancel",
        catalog_admin_items_path,
        :class => "btn btn-link") %>
<% end %>

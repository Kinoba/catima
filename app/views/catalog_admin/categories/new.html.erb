<% provide(:title, t('.new_category')) %>

<%= bootstrap_form_for([:catalog_admin, @category]) do |f| %>

  <%= render("common_form_fields", :f => f) %>

  <hr>

  <%= f.primary(t('.create_category')) %>
  <%= submit_and_add_another(f) %>
  <%= link_to t("cancel"), catalog_admin_categories_path, :class => "btn btn-link" %>

<% end %>

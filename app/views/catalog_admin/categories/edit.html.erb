<% provide(:title, t(".edit_category")) %>

<%= bootstrap_form_for(@category,
                       :url => catalog_admin_category_path) do |f| %>

  <%= render("common_form_fields", :f => f) %>

  <hr>

  <%= link_to(
        fa_icon(:trash, :text => t('.delete_this_category')),
        { :action => "destroy" },
        :method => "delete",
        :class => "pull-right btn btn-link",
        :data => {
          :confirm => t('.delete_confirmation', category: @category.name)
        }) %>

  <%= f.primary(t('.save_category')) %>
  <%= link_to(
        t("cancel"),
        catalog_admin_category_fields_path(catalog, @category),
        :class => "btn btn-link") %>

<% end %>

<% provide(:title, "Edit category") %>

<%= bootstrap_form_for(@category,
                       :url => catalog_admin_category_path) do |f| %>

  <%= render("common_form_fields", :f => f) %>

  <hr>

  <%= link_to(
        fa_icon(:trash, :text => "Delete this category"),
        { :action => "destroy" },
        :method => "delete",
        :class => "pull-right btn btn-link",
        :data => {
          :confirm => "Are you sure you want to delete the #{@category.name} "\
                      "category? This cannot be undone."
        }) %>

  <%= f.primary("Save category") %>
  <%= link_to(
        "Cancel",
        catalog_admin_category_fields_path(catalog, @category),
        :class => "btn btn-link") %>

<% end %>

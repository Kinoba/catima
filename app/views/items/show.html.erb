<% provide(:title, @item.display_name) %>

<%= render_items_search_nav(search, @item) if search %>

<table class="table">
  <tbody>
    <% item_type.list_view_fields.each do |field| %>
      <tr>
        <th><%= field.name %></th>
        <td><%= field_value(@item, field) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= provide(:title, "#{catalog.name} Admin") %>

<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to(catalog_admin_dashboard_path, :class => "navbar-brand") do %>
        <%= catalog.name %> Admin
      <% end %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li>
        <%= link_to(root_path) do %>
          <%= fa_icon(:"sign-out") %>
          Return to site
        <% end %>
      </li>
      <% if policy(Configuration).update? %>
        <li>
          <%= link_to(admin_dashboard_path) do %>
            <%= fa_icon(:cogs, :text => "viim admin") %>
          <% end %>
        </li>
      <% end %>
      <%= render("shared/navbar/user_menu") %>
    </ul>
  </div>
</div>

<div class="container">
  <%= render("shared/flash") %>
  <%= yield %>
</div>

<% parent_layout "base" %>

<% provide(:title, t(".title")) %>

<h2><%= t("advanced_searches.new.advanced_search_configurations") %></h2>
<% if @advance_search_confs.any? %>
  <ul class="nav nav-tabs">
    <% @advance_search_confs.each do |search_config| %>
      <%= content_tag(
            :li,
            :role => "presentation",
            :class => ("active" if search_config.id == @advanced_search_config&.id)) do %>
        <%= link_to(search_config.title, :advanced_search_conf => search_config.id) %>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p><%= t("advanced_searches.new.no_advanced_search_configuration") %></p>
<% end %>

<% if @advanced_search_config.present? %>
  <h3><%= @advanced_search_config.title %></h3>
  <p><%= @advanced_search_config.description %></p>
<% end %>

<%= bootstrap_form_for(@advanced_search) do |f| %>
  <%= hidden_field_tag(:item_type, params[:item_type].presence || @advanced_search_config&.item_type&.slug) %>

  <% if @advanced_search_config.blank? %>
    <h2><%= t("advanced_searches.new.item_type_selection") %></h2>

    <div class="row">
      <div class="col-md-2 col-sm-12">
        <%= t('item_type') %>
      </div>
      <div class="col-md-4 col-sm-12">
        <%= f.select("item_type",
              render_item_types_as_options(@item_types, params[:item_type]),
              {:hide_label => true, :include_blank => true}
        ) %>
      </div>
    </div>
  <% end %>

  <% if params[:item_type].present? || @advanced_search_config.present? %>
    <div class="row">
      <div class="col-md-12">
        <h3><%= t("advanced_searches.new.item_type_search",  item_type: @advanced_search_config.present? ? @advanced_search_config.item_type.name : @advanced_search.item_type.name) %></h3>
      </div>
      <% if @fields.count.zero? %>
        <div class="col-md-12">
          <%= t("advanced_searches.new.no_field_in_advance_search_configuration") %>
        </div>
      <% end %>
    </div>
  <% end %>

  <table class="table">
    <tbody>
      <% if params[:item_type].present? || @advanced_search_config.present? %>
        <% @fields.each do |field| %>
          <%= render_advanced_search_field(f, field) do |content| %>
            <tr>
              <th><%= field.name %></th>
              <td><%= content %></td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= f.primary(t(".submit")) %>
  <%= link_to(
        t(".start_over"),
        { :type => params[:type] },
        :class => "btn btn-text") %>
<% end %>

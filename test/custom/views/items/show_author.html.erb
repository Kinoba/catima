<p>This is a custom template</p>

<ul>
  <li><%= field_value(@item, :name) %></li>
  <li><%= field_value(@item, :nickname) %></li>
  <li><%= field_value(@item, :age) %></li>
  <li><%= field_value(@item, :site) %></li>
  <li><%= field_value(@item, :email) %></li>
  <li><%= field_value(@item, :rank) %></li>
  <li><%= field_value(@item, :bio) %></li>
</ul>

<%# Example of how referenced items can be displayed %>
<% field_item_references(:books, :author, @item) do |list| %>
  <h3>Books (<%= number_with_delimiter(list.total_count) %></h3>
  <ul>
    <% list.items.each do |book| %>
      <li><%= field_value(book, :title) %></li>
    <% end %>
  </ul>
<% end %>
